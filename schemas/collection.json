                "items": {
                  "type": "number"
                },
                "minItems": 4,
                "maxItems": 4
              },
              "minItems": 1,
              "options": {
                "map": {
                  "projection": "EPSG:3857"
                },
                "drawtools": {
                  "projection": "EPSG:4326"
                }
              }
            }
          }
        },
        "temporal": {
          "title": "Temporal Extents",
          "type": "object",
          "format": "temporal-intervals",
          "required": [
            "interval"
          ],
          "properties": {
            "interval": {
              "title": "Interval",
              "type": "array",
              "items": {
                "title": "Date range",
                "type": "array",
                "format": "temporal-interval",
                "items": {
